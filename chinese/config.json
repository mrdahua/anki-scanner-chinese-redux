        "include_sound":{
            "doc": "True to download and include sound files, otherwise False",
            "val": true
        },
        "media_dir_path":{
            "doc": "Path to a directory which must already exist to hold note media files for bundling to an import .apkg",
            "val": "./media_files/"
        },
        "anki_tags_to_exclude":{
            "doc": "A comma separated list of tag strings (which cannot contain spaces). Notes with these tags will not be considered when de-deping to create new notes",
