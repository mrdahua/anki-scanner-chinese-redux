        },
        "output_path":{
            "doc": "Path to an .apkg file that will be created by the text scanner",
            "val": "./import_this.apkg"
        },
        "tag_for_new_cards":{
            "doc": "An anki tag string that will be written onto all the new notes generated. Tags cannot contain spaces",
            "val": "scanner_import"
        },
        "file_or_dir":{
            "doc": "Indicates whether the scanner will read a single file, or will loop through all .txt or .xhtml files in a director. Value can be 'file' or 'dir'",
            "val": "file"
        },
        "file_to_scan":{
            "doc": "The path to the text that is to be scanned. This can also be a director path if you change the file_or_dir config to dir",
            "val": "./media_files/demo.txt"
        },
        "input_encoding":{
            "doc": "encoding of the input file",
            "val": "utf-8"
        },
        "scan_mode":{
            "doc": "One of 'new_chars', 'new_words', or 'new_char_words' - determines which set will be made into new anki notes.",
            "val": "new_char_words"
        },
        "target_note_type":{
            "doc": "ID of the note type in the existing collection that will be used to generate new notes",
            "val": null
        },
        "note_target_maps":{
            "doc": "A dictionary of existing anki note types, and the mappings from scanner fields to note fields",
            "val": {}
        },
        "dev_mode":{
          "doc": "Change the add-on into dev mode with some extra controls and a different menu label. Restart Anki after changing this value to see the new mode.",
